#!/bin/bash
# MCP Python Extensions Configuration
# This file sets up the environment for the bundled dependencies

# Add the bundled dependencies to PYTHONPATH
export PYTHONPATH="${PYTHONPATH:+${PYTHONPATH}:}${DXT_EXTENSION_PATH}/lib:${DXT_EXTENSION_PATH}/src"

# Optional: Set Python to use optimized bytecode
export PYTHONOPTIMIZE=1

# Optional: Disable Python buffering for better logging
export PYTHONUNBUFFERED=1 